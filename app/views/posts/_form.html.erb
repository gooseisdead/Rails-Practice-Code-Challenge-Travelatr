<%= form_for @post do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %>
    <%= f.text_area(:content, size: "24x6") %><br>
    
    <%= f.label :likes %>
    <%= f.hidden_field :likes, value: 0 %><br>

    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name%><br>

    <%= f.label :destination_id %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name%><br>

    <%= f.submit%>
<%end%>